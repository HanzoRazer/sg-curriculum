{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "sg-curriculum://contracts/assignment_v1",
  "title": "Assignment v1",
  "description": "What to practice next and why; produced locally by coach policy.",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_id", "schema_version", "created_at_utc", "device_learner_id", "items"],
  "properties": {
    "schema_id": { "type": "string", "const": "assignment" },
    "schema_version": { "type": "string", "const": "v1" },
    "created_at_utc": { "type": "string", "format": "date-time" },
    "device_learner_id": { "type": "string", "minLength": 6, "maxLength": 128 },
    "plan_label": { "type": "string", "maxLength": 64 },
    "items": {
      "type": "array",
      "minItems": 1,
      "maxItems": 24,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["content_id", "kind", "target_minutes"],
        "properties": {
          "content_id": { "type": "string", "minLength": 3, "maxLength": 128 },
          "kind": { "type": "string", "enum": ["lesson", "drill"] },
          "target_minutes": { "type": "integer", "minimum": 1, "maximum": 180 },
          "target_tempo_bpm": { "type": "integer", "minimum": 30, "maximum": 260 },
          "reps": { "type": "integer", "minimum": 1, "maximum": 500 },
          "why": { "type": "string", "maxLength": 240 },
          "priority": { "type": "integer", "minimum": 1, "maximum": 5 }
        }
      }
    }
  }
}
