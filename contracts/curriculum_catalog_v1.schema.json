{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "sg-curriculum://contracts/curriculum_catalog_v1",
  "title": "Curriculum Catalog v1",
  "description": "Catalog of lessons/drills metadata; content referenced via bundles/attachments.",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_id", "schema_version", "updated_at_utc", "items"],
  "properties": {
    "schema_id": { "type": "string", "const": "curriculum_catalog" },
    "schema_version": { "type": "string", "const": "v1" },
    "updated_at_utc": { "type": "string", "format": "date-time" },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["content_id", "kind", "title"],
        "properties": {
          "content_id": { "type": "string", "minLength": 3, "maxLength": 128 },
          "kind": { "type": "string", "enum": ["lesson", "drill", "reference"] },
          "title": { "type": "string", "minLength": 1, "maxLength": 160 },
          "summary": { "type": "string", "maxLength": 600 },
          "tags": {
            "type": "array",
            "items": { "type": "string", "minLength": 1, "maxLength": 32 },
            "maxItems": 32
          },
          "estimated_minutes": { "type": "integer", "minimum": 1, "maximum": 240 },
          "difficulty_band": { "type": "string", "enum": ["foundation", "beginner", "intermediate", "advanced"] },
          "assets": {
            "type": "array",
            "items": { "type": "string", "minLength": 1, "maxLength": 256 },
            "maxItems": 64
          }
        }
      }
    }
  }
}
