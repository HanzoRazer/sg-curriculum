{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "sg-curriculum://contracts/attachments_manifest_v1",
  "title": "Attachments Manifest v1",
  "description": "References to large artifacts by hash/URI; no embedded blobs.",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_id", "schema_version", "created_at_utc", "attachments"],
  "properties": {
    "schema_id": { "type": "string", "const": "attachments_manifest" },
    "schema_version": { "type": "string", "const": "v1" },
    "created_at_utc": { "type": "string", "format": "date-time" },
    "attachments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["attachment_id", "sha256", "bytes", "mime", "relpath"],
        "properties": {
          "attachment_id": { "type": "string", "minLength": 3, "maxLength": 128 },
          "sha256": { "type": "string", "pattern": "^[0-9a-f]{64}$" },
          "bytes": { "type": "integer", "minimum": 0 },
          "mime": { "type": "string", "minLength": 3, "maxLength": 128 },
          "relpath": { "type": "string", "minLength": 1, "maxLength": 256 },
          "uri": { "type": "string", "minLength": 1, "maxLength": 2048 },
          "kind": {
            "type": "string",
            "enum": ["audio_wav", "audio_flac", "midi", "image_png", "image_jpg", "chart_csv", "unknown"]
          },
          "notes": { "type": "string", "maxLength": 512 }
        }
      }
    }
  }
}
